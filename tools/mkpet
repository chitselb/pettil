#!/bin/bash

# pettil/tools/mkpet
# target  mask  machine
#   0        1  PET #700251
#   1        2  Upgrade PET
#   2        4  4.0 PET
#   3        8  80-column PET
#           16  Plus/4
#   4       32  VIC-20
#   5       64  Commodore 64
#          128  Commodore 128

cd ~/pettil/ >/dev/null

[ -z $TERM ] && export TERM=xterm

echo $PERTURB

for arg in "$@"
do
    if [ -z "${PERTURB+xxx}" ]
    then
        ttl=""
        moncommand=obj/pettil.mon${arg}
        case $HOSTNAME in
          (tarabuza) export \
  PERTURBTERMINAL="xfce4-terminal --geometry=80x40-4-4 --font=""ProggyVector"" -e "
    echo "$PERTURBTERMINAL";;
          (*)   export PERTURBTERMINAL="xterm -geometry 80x39-4-4 -fa ProggyVector -fs 10 -e ";;
        esac
     else
        ttl="timeout 15 "
        moncommand=obj/perturb/${PERTURB}.mon${arg}
        export PERTURBTERMINAL="xterm -e "
    fi

    if [ "${arg}" == 7 ]
    then
            exitscrsh="-exitscreenshotvicii tmp/perturb/${PERTURB}.screx${arg} "
    fi

    case $arg in
# 0 (PET 2001-N #700251)
        "0" )
            export ADDR='0401'
    $PERTURBTERMINAL  "${ttl} xpet     \
        -moncommand ${moncommand}                                                \
        -config data/sdl2_chitselb.vicerc \
        -CRTCfull \
        ${otherflags} \
        -iosize 2048 -petdww -petdwwimage data/dwwimage.dww \
        -8 chitselb.d64 -9 pettil.d64 -warp -silent"
           ;;

# 1 (PET 3032 Upgrade ROM)
        "1" )
            export ADDR='0401'
    $PERTURBTERMINAL "${ttl} xpet    \
        -moncommand ${moncommand}                                                \
        -config data/sdl2_pet3.vicerc \
        -CRTCfull \
        -iosize 2048 -petdww -petdwwimage data/dwwimage.dww \
        -8 chitselb.d64                 \
        -9 pettil.d64                   \
        -warp -silent"
           ;;

# 2 (PET 4032 4.0 ROM)
        "2" )
            export ADDR='0401'
    $PERTURBTERMINAL "${ttl} xpet     \
        -moncommand ${moncommand}                                               \
        -config data/sdl2_pet4.vicerc \
        -CRTCfull \
        -iosize 2048 -petdww -petdwwimage data/dwwimage.dww \
        -8 chitselb.d64                 \
        -9 pettil.d64                   \
        -warp -silent"
           ;;

# 3 (PET 8032 4.0 ROM)
        "3" )
            export ADDR='0401'
    $PERTURBTERMINAL "${ttl} xpet  \
        -moncommand ${moncommand}                                               \
        -config data/sdl2_pet80.vicerc                                          \
        -CRTCfull \
        -iosize 2048 -petdww -petdwwimage data/dwwimage.dww                     \
        -8 chitselb.d64                                                         \
        -9 pettil.d64                                                           \
        -warp -silent"
           ;;

# 4 (VIC-20 expanded)
        "4" )
            export ADDR='1201'
    $PERTURBTERMINAL "${ttl} xvic                       \
        -moncommand ${moncommand}                                               \
        -config data/sdl2_chitselb.vicerc                                       \
        -VICfull \
        -8 chitselb.d64                                                         \
        -9 pettil.d64                                                           \
        -warp -silent"
           ;;

# 5 (C=64)
        "5" )
            export ADDR='0801'
    $PERTURBTERMINAL "${ttl} x64sc                        \
        -moncommand ${moncommand}                                               \
        -config data/sdl2_chitselb.vicerc                                       \
        -VICIIfull \
        -8 chitselb.d64                                                         \
        -9 pettil.d64                                                           \
        -warp -silent"
           ;;

# 6 (C128)
        "6" )
            export ADDR='1C01'
    $PERTURBTERMINAL "${ttl} x128 ${exitscrsh}                 \
        -moncommand ${moncommand}                                               \
        -config data/sdl2_chitselb.vicerc \
        -VICIIfull \
        -8 chitselb.d64                 \
        -9 pettil.d64                   \
        -warp -silent"
           ;;

# 7 (Plus/4)
        "7" )
            export ADDR='1001'
    $PERTURBTERMINAL "${ttl} xplus4                       \
        -moncommand ${moncommand}                                               \
        -config data/sdl2_chitselb.vicerc                                       \
        -TEDfull \
        -8 chitselb.d64                                                         \
        -9 pettil.d64                                                           \
        -warp -silent"
           ;;

    esac
done
exit

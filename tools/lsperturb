#done
for a in $(find . -name "*.scrsh.png" -print0 \
    | xargs -0 -I {} basename {} \
    | sort -u)
do
    echo $a
    display -delay 30 -resize '120%' -geometry '+60+80' tmp/perturb/$a &
    display -delay 30 -resize '120%' -geometry '+560+80' data/perturb/$a &
    grep $a perturb.log | tail -1
    sleep $1
done

exit

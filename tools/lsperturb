cd ~/pettil >/dev/null

#for a in $(ls ./tmp/perturb/*.scrsh.png)
#for a in $(find . -type f -name "*.scrsh.png" | sort)
#do
#    b=$(basename $a)
#    echo $b
#    display -delay 30 -resize '150%' -geometry '+60+260' tmp/perturb/$b &

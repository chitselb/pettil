#if 0
name=DNEGATE
stack=( d -- -d )
tags=forth-83,double,primitive
Negate the double on the stack
#endif
dnegate
    lda #>(next-1)
    pha
    lda #<(next-1)
    pha
dodnegate
    sec
    lda stackl,x
    eor #$FF
    adc #0
    sta stackl,x
    lda stackh,x
    eor #$FF
    adc #0
    sta stackh,x
    jmp neg2


#if 0
name=DSUB
stack=( d1 d2 -- d1-d2 )
tags=forth-83,double,math
Perform `d1 - d2`

#endif
dsub
    sec
    lda stackl+2,x
    sbc stackl,x
    sta stackl+2,x
    lda stackh+2,x
    sbc stackh,x
    sta stackh+2,x
    lda stackl+1,x
    sbc tos
    pha
    lda stackh+1,x
    sbc tos+1
    tay
    pla
    inx
    inx
    rts


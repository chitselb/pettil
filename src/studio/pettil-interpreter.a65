_interpret
    jsr enter
#include "page.i65"
interpret01
    .word qstack
#include "page.i65"
    .word eoiq
#include "page.i65"
    .word not
#include "pass.i65"
    .word qbranch
    .byt <(interpret03-*+1)
#include "page.i65"
    .word bl
#include "page.i65"
    .word _name                 ;( nfa|0 )
#include "page.i65"
    .word qdup
#include "pass.i65"
    .word qbranch
    .byt <(interpret01-*+1)
